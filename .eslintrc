// From here, enable the rules that you care about by changing the 0 to a 1 or 2.
// 1 means warning (will not affect exit code) and 2 means error (will affect exit code).
// See: https://gist.github.com/ghostwords/40936f11091b87987e56
// See: http://eslint.org/docs/rules/
// See: https://github.com/feross/eslint-config-standard

{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "globalReturn": true,
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "compat",   // Allow configuration of target browser/s (npm i -D eslint-plugin-compat)
    "react",
    "jsx-a11y"
  ],
  "globals": {
    "browser": true
  },
  "settings": {
    "ecmascript": 2017,
    "jsx": true,
    "polyfills": [
      "fetch", "promises"
    ]
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "brace-style": 0,
    "comma-dangle": 0,
    "compat/compat": "error", // required by eslint-plugin-compat
    "function-paren-newline": ["error", "multiline"],
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "jsx-a11y/label-has-for": [ 2, {
      "components": [ "Label" ],
      "required": {
        "some": [ "nesting", "id" ]
      },
      "allowChildren": false
    }],
    "linebreak-style": 0,
    "max-len": ["error", {"code": 120, "ignoreUrls": true, "ignoreComments": true}],
    "max-statements-per-line": [1, {"max": 1}],
    "no-console": 1,
    "no-multi-spaces": ["error", {"ignoreEOLComments": true}],
    "no-restricted-syntax": 1,
    "no-iterator": 1,
    "no-underscore-dangle": 0,
    "no-unused-vars": 2,
    "no-var": 1,
    "object-curly-newline": ["error", { "consistent": true }],
    "object-curly-spacing": ["error", "never"],
    "prefer-const": 1,
    "prefer-rest-params": 1,
    "prefer-spread": 1,
    "prefer-template": 1,
    "quotes": [2, "single"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/require-default-props": 0, // Vurder om vi treger Ã¥ konfigurere denne
    "semi": [2, "always"],
    "strict": 0
  }
}
